[
    {
        "name": "Android debug is enabled.",
        "id": "DS180000",
        "description": "The android:debuggable element is set to true, which should be disabled for release builds.",
        "recommendation": "",
        "applies_to_file_regex": [
            "AndroidManifest.xml"
        ],
        "tags": [
            "Framework.Android"
        ],
        "severity": "ManualReview",
        "rule_info": "DS180000.md",
        "patterns": [
            {
                "xpaths": ["//Application/@android:debuggable"],
                "pattern": "true",
                "type": "regex",
                "scopes": [
                    "code"
                ],
                "modifiers" : ["i"]
            }
        ],
        "must-match": [
            "<application android:debuggable='true' />"
        ],
        "must-not-match": [
            "<application android:debuggable='false' />"
        ]
    },
