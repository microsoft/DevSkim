{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"rootDir": "src",
		"lib": ["es6"],
		"sourceMap": true,
      	"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitAny": false,
		"noImplicitReturns": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/__mocks__/*"]
}